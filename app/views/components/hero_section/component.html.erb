<section class="relative w-full bg-[#1A1E28] overflow-hidden min-h-screen flex items-center">
  <!-- VIDEO BACKGROUND (Optional - uncomment and add video file) -->
  <!--
  <div data-video-background-target="fallback" class="hidden absolute inset-0 bg-[#1A1E28] z-0"></div>
  <video 
    data-video-background-target="video"
    autoplay 
    muted 
    loop 
    playsinline
    class="absolute inset-0 w-full h-full object-cover opacity-20 z-0"
  >
    <source src="/videos/hero-car.mp4" type="video/mp4">
  </video>
  -->
  
  <!-- ABSTRACT BACKGROUND SHAPES WITH ANIMATION -->
  <div class="absolute top-0 left-0 w-[600px] h-[600px] rounded-full bg-white/[0.03] -translate-x-1/3 -translate-y-1/3 blur-3xl animate-float"></div>
  <div class="absolute bottom-0 right-0 w-[900px] h-[900px] rounded-full bg-white/[0.03] translate-x-1/4 translate-y-1/4 blur-3xl animate-float" style="animation-delay: 2s;"></div>
  <div class="absolute bottom-20 left-1/4 w-[400px] h-[400px] rounded-full bg-white/[0.02] blur-3xl animate-float" style="animation-delay: 4s;"></div>
  <!-- CURVED SHAPE FROM RIGHT -->
  <div class="absolute top-0 right-0 w-[800px] h-[1200px] bg-gradient-to-br from-white/[0.02] to-transparent rounded-full -translate-y-1/4 translate-x-1/4 blur-3xl"></div>

  <div class="relative max-w-7xl mx-auto px-6 pt-20 pb-0 grid grid-cols-1 lg:grid-cols-2 gap-10 items-center min-h-[90vh] z-10">
    <!-- LEFT TEXT SECTION -->
    <div class="text-white space-y-6 z-10 animate-slide-in-left">
      <h1 class="text-5xl md:text-6xl lg:text-7xl font-extrabold leading-tight italic">
        <span class="inline-block animate-fade-in-up" style="animation-delay: 0.2s;">Find Your</span><br>
        <span class="inline-block animate-fade-in-up" style="animation-delay: 0.4s;">Dream Car</span>
      </h1>

      <p class="text-gray-300 max-w-md text-base leading-relaxed animate-fade-in-up" style="animation-delay: 0.6s; opacity: 0; animation-fill-mode: forwards;">
        Lorem Ipsum has been the industry's standard dummy text ever since.
      </p>

      <%= link_to "Browse Cars", v1_cars_path, class: "inline-block px-8 py-3 border-2 border-white rounded-md text-white hover:bg-white hover:text-[#1A1E28] transition-all duration-300 font-medium hover:scale-105 hover:shadow-lg animate-fade-in-up", style: "animation-delay: 0.8s; opacity: 0; animation-fill-mode: forwards;" %>
    </div>

    <!-- CAR IMAGE SECTION -->
    <div class="relative lg:absolute lg:right-0 lg:bottom-0 w-full lg:w-auto animate-slide-in-right" data-controller="parallax" data-parallax-speed-value="0.3">
      <div class="relative">
        <!-- White bottom area extending from car -->
        <div class="absolute bottom-0 left-0 right-0 h-32 bg-white z-0"></div>
        <!-- Car image positioned above white area -->
        <%= image_tag "herolaz.jpg", class: "relative w-full max-w-xl lg:max-w-2xl xl:max-w-3xl drop-shadow-2xl transform lg:-translate-y-10 lg:translate-x-10 z-10 hover-lift transition-all duration-500" %>
      </div>
    </div>
  </div>
</section>
