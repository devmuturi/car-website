<%= component("nav_bar") %>

<section class="bg-white py-12">
  <div class="max-w-7xl mx-auto px-6">
    <div class="grid grid-cols-1 lg:grid-cols-2 gap-8 mb-8">
      <!-- Images -->
      <div>
        <% if @car.images.attached? %>
          <div class="mb-4">
            <div id="main-image" class="aspect-w-16 aspect-h-9 mb-4">
              <%= image_tag @car.main_image, class: "w-full h-96 object-cover rounded-lg", id: "main-car-image" %>
            </div>
            <div class="grid grid-cols-4 gap-2">
              <% @car.images.each_with_index do |image, index| %>
                <%= image_tag image, class: "h-20 w-full object-cover rounded cursor-pointer hover:opacity-75 #{index == 0 ? 'ring-2 ring-[#1A1E28]' : ''}", onclick: "document.getElementById('main-car-image').src = this.src" %>
              <% end %>
            </div>
          </div>
        <% else %>
          <div class="h-96 bg-gray-200 rounded-lg flex items-center justify-center text-gray-400">No Images</div>
        <% end %>
      </div>

      <!-- Details -->
      <div>
        <h1 class="text-4xl font-extrabold text-gray-900 mb-2"><%= @car.make.name %> <%= @car.model.name %></h1>
        <p class="text-4xl font-bold text-[#1A1E28] mb-6">$<%= number_with_delimiter(@car.price) %></p>

        <div class="grid grid-cols-2 gap-4 mb-6">
          <div class="bg-gray-50 p-4 rounded">
            <p class="text-sm text-gray-500">Year</p>
            <p class="text-xl font-semibold"><%= @car.year %></p>
          </div>
          <div class="bg-gray-50 p-4 rounded">
            <p class="text-sm text-gray-500">Mileage</p>
            <p class="text-xl font-semibold"><%= number_with_delimiter(@car.mileage) %> miles</p>
          </div>
          <div class="bg-gray-50 p-4 rounded">
            <p class="text-sm text-gray-500">Condition</p>
            <p class="text-xl font-semibold"><%= @car.condition_display %></p>
          </div>
          <div class="bg-gray-50 p-4 rounded">
            <p class="text-sm text-gray-500">Status</p>
            <span class="px-3 py-1 inline-flex text-sm leading-5 font-semibold rounded-full <%= @car.in_stock? ? 'bg-green-100 text-green-800' : 'bg-red-100 text-red-800' %>">
              <%= @car.status.humanize %>
            </span>
          </div>
          <div class="bg-gray-50 p-4 rounded">
            <p class="text-sm text-gray-500">Body Style</p>
            <p class="text-xl font-semibold"><%= @car.body_style || "N/A" %></p>
          </div>
          <div class="bg-gray-50 p-4 rounded">
            <p class="text-sm text-gray-500">Fuel Type</p>
            <p class="text-xl font-semibold"><%= @car.fuel_type || "N/A" %></p>
          </div>
          <div class="bg-gray-50 p-4 rounded">
            <p class="text-sm text-gray-500">Transmission</p>
            <p class="text-xl font-semibold"><%= @car.transmission || "N/A" %></p>
          </div>
          <div class="bg-gray-50 p-4 rounded">
            <p class="text-sm text-gray-500">Color</p>
            <p class="text-xl font-semibold"><%= @car.color || "N/A" %></p>
          </div>
        </div>

        <div class="mb-6">
          <h3 class="text-xl font-bold mb-2">Description</h3>
          <p class="text-gray-700"><%= @car.description %></p>
        </div>

        <div class="flex space-x-4">
          <a href="<%= whatsapp_link(@car) %>" target="_blank" class="flex-1 px-6 py-3 bg-green-500 text-white rounded-md hover:bg-green-600 transition text-center font-medium">
            <svg class="inline-block w-5 h-5 mr-2" fill="currentColor" viewBox="0 0 24 24">
              <path d="M17.472 14.382c-.297-.149-1.758-.867-2.03-.967-.273-.099-.471-.148-.67.15-.197.297-.767.966-.94 1.164-.173.199-.347.223-.644.075-.297-.15-1.255-.463-2.39-1.475-.883-.788-1.48-1.761-1.653-2.059-.173-.297-.018-.458.13-.606.134-.133.298-.347.446-.52.149-.174.198-.298.298-.497.099-.198.05-.371-.025-.52-.075-.149-.669-1.612-.916-2.207-.242-.579-.487-.5-.669-.51-.173-.008-.371-.01-.57-.01-.198 0-.52.074-.792.372-.272.297-1.04 1.016-1.04 2.479 0 1.462 1.065 2.875 1.213 3.074.149.198 2.096 3.2 5.077 4.487.709.306 1.262.489 1.694.625.712.227 1.36.195 1.871.118.571-.085 1.758-.719 2.006-1.413.248-.694.248-1.289.173-1.413-.074-.124-.272-.198-.57-.347m-5.421 7.403h-.004a9.87 9.87 0 01-5.031-1.378l-.361-.214-3.741.982.998-3.648-.235-.374a9.86 9.86 0 01-1.51-5.26c.001-5.45 4.436-9.884 9.888-9.884 2.64 0 5.122 1.03 6.988 2.898a9.825 9.825 0 012.893 6.994c-.003 5.45-4.437 9.884-9.885 9.884m8.413-18.297A11.815 11.815 0 0012.05 0C5.495 0 .16 5.335.157 11.892c0 2.096.547 4.142 1.588 5.945L.057 24l6.305-1.654a11.882 11.882 0 005.683 1.448h.005c6.554 0 11.89-5.335 11.893-11.893a11.821 11.821 0 00-3.48-8.413Z"/>
            </svg>
            Enquire on WhatsApp
          </a>
          <%= link_to "Compare", v1_compare_cars_path(car1: @car.slug || @car.id), class: "px-6 py-3 border-2 border-[#1A1E28] text-[#1A1E28] rounded-md hover:bg-[#1A1E28] hover:text-white transition font-medium", data: { turbo: false } %>
        </div>
      </div>
    </div>

    <!-- Related Cars -->
    <% if @related_cars.any? %>
      <div class="mt-12">
        <h2 class="text-3xl font-extrabold text-gray-800 italic mb-6">Related Cars</h2>
        <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-6">
          <% @related_cars.each do |car| %>
            <div class="bg-white rounded-lg shadow-lg overflow-hidden hover-lift">
              <% if car.main_image %>
                <%= link_to v1_car_path(car) do %>
                  <%= image_tag car.main_image, class: "w-full h-48 object-cover" %>
                <% end %>
              <% else %>
                <div class="w-full h-48 bg-gray-200 flex items-center justify-center text-gray-400">No Image</div>
              <% end %>
              <div class="p-4">
                <h3 class="text-lg font-bold text-gray-900 mb-2">
                  <%= link_to "#{car.make.name} #{car.model.name}", v1_car_path(car), class: "hover:text-[#1A1E28]" %>
                </h3>
                <p class="text-xl font-bold text-[#1A1E28] mb-2">$<%= number_with_delimiter(car.price) %></p>
                <p class="text-sm text-gray-600 mb-4"><%= car.year %> â€¢ <%= number_with_delimiter(car.mileage) %> miles</p>
                <%= link_to "View", v1_car_path(car), class: "w-full block text-center px-4 py-2 bg-[#1A1E28] text-white rounded-md hover:bg-[#2a2f3d] transition" %>
              </div>
            </div>
          <% end %>
        </div>
      </div>
    <% end %>
  </div>
</section>

<%= component("footer") %>

