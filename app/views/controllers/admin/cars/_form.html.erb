<%= form_with model: [:admin, @car], local: true, multipart: true, class: "space-y-6" do |form| %>
  <% if @car.errors.any? %>
    <div class="bg-red-100 border border-red-400 text-red-700 px-4 py-3 rounded">
      <h4 class="font-bold">Please fix the following errors:</h4>
      <ul class="list-disc list-inside">
        <% @car.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div data-controller="make-select">
    <div class="grid grid-cols-1 gap-6 sm:grid-cols-2">
      <div>
        <%= form.label :make_id, "Make", class: "block text-sm font-medium text-gray-700" %>
        <%= form.collection_select :make_id, @makes, :id, :name,
      { prompt: "Select Make", selected: @car.make_id },
      { data: { make_select_target: "makeSelect", action: "change->make-select#handleChange" },
        class: "mt-1 block w-full rounded-md border-gray-300 shadow-sm" } %>
      </div>

      <div>
        <%= form.label :model_id, "Model", class: "block text-sm font-medium text-gray-700" %>
        <%= form.collection_select :model_id, @models, :id, :name,
      { prompt: "Select Model", selected: @car.model_id },
      { data: { make_select_target: "modelSelect" },
        class: "mt-1 block w-full rounded-md border-gray-300 shadow-sm" } %>
      </div>
    </div>
  </div>

  <div class="grid grid-cols-1 gap-6 sm:grid-cols-2">

    <div>
      <%= form.label :year, class: "block text-sm font-medium text-gray-700" %>
      <%= form.number_field :year, class: "mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-indigo-500 focus:ring-indigo-500" %>
    </div>

    <div>
      <%= form.label :price, class: "block text-sm font-medium text-gray-700" %>
      <%= form.number_field :price, class: "mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-indigo-500 focus:ring-indigo-500" %>
    </div>

    <div>
      <%= form.label :mileage, class: "block text-sm font-medium text-gray-700" %>
      <%= form.number_field :mileage, class: "mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-indigo-500 focus:ring-indigo-500" %>
    </div>

    <div>
      <%= form.label :condition, class: "block text-sm font-medium text-gray-700" %>
      <%= form.select :condition, Car.conditions.keys.map { |k| [k == 'brand_new' ? 'New' : k.humanize, k] }, {}, { class: "mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-indigo-500 focus:ring-indigo-500" } %>
    </div>

    <div>
      <%= form.label :status, class: "block text-sm font-medium text-gray-700" %>
      <%= form.select :status, Car.statuses.keys.map { |k| [k.humanize, k] }, {}, { class: "mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-indigo-500 focus:ring-indigo-500" } %>
    </div>

    <div>
      <%= form.label :body_style, class: "block text-sm font-medium text-gray-700" %>
      <%= form.text_field :body_style, class: "mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-indigo-500 focus:ring-indigo-500" %>
    </div>

    <div>
      <%= form.label :fuel_type, class: "block text-sm font-medium text-gray-700" %>
      <%= form.text_field :fuel_type, class: "mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-indigo-500 focus:ring-indigo-500" %>
    </div>

    <div>
      <%= form.label :transmission, class: "block text-sm font-medium text-gray-700" %>
      <%= form.text_field :transmission, class: "mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-indigo-500 focus:ring-indigo-500" %>
    </div>

    <div>
      <%= form.label :color, class: "block text-sm font-medium text-gray-700" %>
      <%= form.text_field :color, class: "mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-indigo-500 focus:ring-indigo-500" %>
    </div>
  </div>

  <div>
    <%= form.label :description, class: "block text-sm font-medium text-gray-700" %>
    <%= form.text_area :description, rows: 4, class: "mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-indigo-500 focus:ring-indigo-500" %>
  </div>

  <div>
    <%= form.label :images, "Car Images", class: "block text-sm font-medium text-gray-700" %>
    <%= form.file_field :images, multiple: true, accept: "image/*", class: "mt-1 block w-full text-sm text-gray-500 file:mr-4 file:py-2 file:px-4 file:rounded-md file:border-0 file:text-sm file:font-semibold file:bg-indigo-50 file:text-indigo-700 hover:file:bg-indigo-100" %>
    <% if @car.persisted? && @car.images.attached? %>
      <div class="mt-4 grid grid-cols-4 gap-4">
        <% @car.images.each do |image| %>
          <div class="relative">
            <%= image_tag image, class: "h-32 w-full object-cover rounded" %>
            <%= link_to "Remove", remove_image_admin_car_path(@car, image_id: image.id), data: { turbo_method: :delete }, class: "absolute top-2 right-2 bg-red-500 text-white px-2 py-1 rounded text-xs" %>
          </div>
        <% end %>
      </div>
    <% end %>
  </div>

  <div>
    <%= form.label :published_at, "Publish Date (leave blank to keep unpublished)", class: "block text-sm font-medium text-gray-700" %>
    <%= form.datetime_local_field :published_at, class: "mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-indigo-500 focus:ring-indigo-500" %>
  </div>

  <div class="flex justify-end space-x-3">
    <%= link_to "Cancel", admin_cars_path, class: "px-4 py-2 border border-gray-300 rounded-md shadow-sm text-sm font-medium text-gray-700 bg-white hover:bg-gray-50" %>
    <%= form.submit "Save Car", class: "px-4 py-2 border border-transparent rounded-md shadow-sm text-sm font-medium text-white bg-[#1A1E28] hover:bg-[#2a2f3d]" %>
  </div>
<% end %>

