<%= form_with model: [:admin, @model], local: true, class: "space-y-6" do |form| %>
  <% if @model.errors.any? %>
    <div class="bg-red-100 border border-red-400 text-red-700 px-4 py-3 rounded">
      <ul>
        <% @model.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div>
    <%= form.label :make_id, "Make", class: "block text-sm font-medium text-gray-700" %>
    <%= form.collection_select :make_id, @makes, :id, :name, { prompt: "Select Make" }, { class: "mt-1 block w-full rounded-md border-gray-300 shadow-sm" } %>
  </div>

  <div>
    <%= form.label :name, class: "block text-sm font-medium text-gray-700" %>
    <%= form.text_field :name, class: "mt-1 block w-full rounded-md border-gray-300 shadow-sm" %>
  </div>

  <div>
    <%= form.label :generation, class: "block text-sm font-medium text-gray-700" %>
    <%= form.text_field :generation, class: "mt-1 block w-full rounded-md border-gray-300 shadow-sm" %>
  </div>

  <div class="flex justify-end space-x-3">
    <%= link_to "Cancel", admin_models_path, class: "px-4 py-2 border border-gray-300 rounded-md shadow-sm text-sm font-medium text-gray-700 bg-white hover:bg-gray-50" %>
    <%= form.submit "Save", class: "px-4 py-2 border border-transparent rounded-md shadow-sm text-sm font-medium text-white bg-[#1A1E28] hover:bg-[#2a2f3d]" %>
  </div>
<% end %>

